<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dbloja?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admwindows</property>
    <mapping resource="br/com/models/vo/Categoria.hbm.xml"/>
    <mapping resource="br/com/models/vo/Cliente.hbm.xml"/>
    <mapping resource="br/com/models/vo/Fornecedor.hbm.xml"/>
    <mapping resource="br/com/models/vo/Pessoa.hbm.xml"/>
    <mapping resource="br/com/models/vo/Pessoafisica.hbm.xml"/>
    <mapping resource="br/com/models/vo/Endereco.hbm.xml"/>
    <mapping resource="br/com/models/vo/Produto.hbm.xml"/>
    <mapping resource="br/com/models/vo/Pessoajuridica.hbm.xml"/>
    <mapping resource="br/com/models/vo/Contato.hbm.xml"/>
    <mapping resource="br/com/models/vo/Funcionario.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
