<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/fenixdb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admwindows</property>
    <mapping resource="br/com/models/entity/Pedidocliente.hbm.xml"/>
    <mapping resource="br/com/models/entity/Produto.hbm.xml"/>
    <mapping resource="br/com/models/entity/Item.hbm.xml"/>
    <mapping resource="br/com/models/entity/Cliente.hbm.xml"/>
    <mapping resource="br/com/models/entity/Usuario.hbm.xml"/>
    <mapping resource="br/com/models/entity/Pedidofornecedor.hbm.xml"/>
    <mapping resource="br/com/models/entity/Fornecedor.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
